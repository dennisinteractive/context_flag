/**
 * Implements hook_context_page_condition().
 */
function context_flag_context_page_condition() {
  // Comment conditions
  if ($plugin = context_get_plugin('condition', 'comment_active')) {
    $plugin->execute();
  }
  if ($plugin = context_get_plugin('condition', 'comment_inactive')) {
    $plugin->execute();
  }
  // Entity conditions
  if ($plugin = context_get_plugin('condition', 'entity_active')) {
    $plugin->execute();
  }
  if ($plugin = context_get_plugin('condition', 'entity_inactive')) {
    $plugin->execute();
  }
  // Node conditions
  if ($plugin = context_get_plugin('condition', 'node_active')) {
    $plugin->execute();
  }
  if ($plugin = context_get_plugin('condition', 'node_inactive')) {
    $plugin->execute();
  }
  // User page conditions
  if ($plugin = context_get_plugin('condition', 'user_page_active')) {
    $plugin->execute();
  }
  if ($plugin = context_get_plugin('condition', 'user_page_inactive')) {
    $plugin->execute();
  }
  // User account conditions
  if ($plugin = context_get_plugin('condition', 'user_account_active')) {
    global $user;
    $plugin->execute($user);
  }
  if ($plugin = context_get_plugin('condition', 'user_account_inactive')) {
    global $user;
    $plugin->execute($user);
  }
}